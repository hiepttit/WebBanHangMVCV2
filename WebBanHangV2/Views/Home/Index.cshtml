        <div class="slide-num-holder" id="snh-1"></div>
    </div>
</section>
<!-- Hero section end -->
<!-- letest product section -->
<section class="top-letest-product-section">
    <div class="container">
        <div class="section-title">
            <h2>LATEST PRODUCTS</h2>
        </div>
        <div class="product-slider owl-carousel">
            @foreach (var item in lst)
            {
                <div class="product-item">
                    <a href="@Url.Content("/Products/Detail/"+@item.ID)">
                        <div class="pi-pic">
                            <img src="../../images/ThePicture/@Html.Action("ImageMainItem", new { id = @item.ID })" alt="">
                            @*<div class="pi-links">
                                    <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                    <a href="#" class="add-card"><i class="flaticon-shopping-cart"><span>BUY</span></i></a>
                                </div>*@
                        </div>
                        <div class="pi-text">
                            <h6>$@item.Prices</h6>
                            <p>@item.ProductName</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<!-- letest product section end -->
<!-- Product filter section -->
<section class="product-filter-section">
    <div class="container">
        <div class="section-title">
            <h2>BROWSE TOP SELLING PRODUCTS</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                if (item.Sales == 1)
                {
                    <div class="col-lg-3 col-sm-6">
                        <div class="product-item">
                            <a href="@Url.Content("/Products/Detail/"+@item.ID)">
                                <div class="pi-pic">
                                    <div class="tag-sale">ON SALE</div>
                                    <img src="../../images/ThePicture/@Html.Action("ImageMainItem", new { id = @item.ID })" alt="">
                                    <div class="pi-links">
                                        @*<a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                            <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>*@
                                    </div>
                                </div>
                                <div class="pi-text">
                                    <h6>$@item.Prices</h6>
                                    <p>@item.ProductName</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="text-center pt-5">
            @*<button class="site-btn sb-line sb-dark">LOAD MORE</button>*@
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",new { page }))
        </div>
    </div>
</section>
<!-- Product filter section end -->
<!-- Banner section -->
<section class="banner-section">
    <div class="container">
        <div class="banner set-bg" data-setbg="../images/banner-bg.jpg">
            <div class="tag-new">NEW</div>
            <span>New Arrivals</span>
            <h2>STRIPED SHIRTS</h2>
            <a href="#" class="site-btn">SHOP NOW</a>
        </div>
    </div>
</section>
<!-- Banner section end  -->
