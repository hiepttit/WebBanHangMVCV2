@using WebBanHangV2.Models
@model List<GioHang>

@{
    ViewBag.Title = "Cart";
    var s = 0.0;
}

<!-- Page info -->
<div class="page-top-info">
    <div class="container">
        <h4>Your cart</h4>
        <div class="site-pagination">
            <a href="">Home</a> /
            <a href="">Your cart</a>
        </div>
    </div>
</div>
<!-- Page info end -->
<!-- cart section end -->
<section class="cart-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-table">
                    <h3>Your Cart</h3>
                    <div class="cart-table-warp">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-th">Product</th>
                                    <th class="quy-th">Quantity</th>
                                    <th class="size-th">SizeSize</th>
                                    <th class="total-th">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="product-col">
                                            <img src="../images/ThePicture/@item.Image" alt="">
                                            <div class="pc-title">
                                                <h4>@item.productName</h4>
                                                <p>$@item.dDonGia</p>
                                            </div>
                                        </td>
                                        <td class="quy-col">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input type="text" value="@item.soLuong">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="size-col"><h4>Size M</h4></td>
                                        <td class="total-col"><h4>$@item.ThanhTien</h4></td>
                                        <td style="padding-left:50px">
                                            @Html.ActionLink("Xóa", "DeleteCart", new { @productID = item.productID })
                                        </td>
                                    </tr>
                                            s = s + @item.ThanhTien;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="total-cost">
                        <h6>Total <span>$@s</span></h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 card-right">
                <form class="promo-code-form">
                    <input type="text" placeholder="Enter promo code">
                    <button>Submit</button>
                </form>
                @*<a href="" class="site-btn">Proceed to checkout</a>*@
                @using (Html.BeginForm("InsertCart", "Cart"))
                {
                    <button type="submit" class="site-btn" value="BUY" id="btn_Cart"><i class="flaticon-bag"></i><span>BUY</span></button>
                }
                <a href="" class="site-btn sb-dark">Continue shopping</a>
            </div>
        </div>
    </div>
</section>
<!-- cart section end -->
<!-- Related product section -->
<section class="related-product-section">
    <div class="container">
        <div class="section-title text-uppercase">
            <h2>Continue Shopping</h2>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.lstRandom)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="product-item">
                        <div class="pi-pic">
                            <div class="tag-new">New</div>
                            <img src="../images/ThePicture/@Html.Action("ImageMainItem","Home", new { id = @item.ID })" alt="">
                            <div class="pi-links">
                                <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                            </div>
                        </div>
                        <div class="pi-text">
                            <h6>@item.Prices</h6>
                            <p>@item.ProductName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Related product section end -->
